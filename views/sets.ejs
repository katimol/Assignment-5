<!DOCTYPE html>
<html>
  <head>
    <title>Lego Collection</title>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/css/theme.css" />
  </head>

  <body>
    <%- include('partials/navbar', { page: '/lego/sets' }) %>     <br />

    <div class="container">
      <div class="row">
        <main class="col-md-12">
          <section class="bg-light text-center py-5">
            <div class="container">
              <h1 class="display-5 fw-bold">Collection</h1>

              <p class="lead text-muted">
                Browse our entire collection of Lego Sets.
              </p>

              <div class="mt-4">
                <a
                  href="/lego/sets?theme=technic"
                  class="btn btn-outline-primary me-2"
                  >Technic</a
                >

                <a
                  href="/lego/sets?theme=classic town"
                  class="btn btn-outline-primary me-2"
                  >Classic Town</a
                >

                <a
                  href="/lego/sets?theme=space"
                  class="btn btn-outline-primary me-2"
                  >Space</a
                >
                <a
                  href="/lego/sets?theme=train"
                  class="btn btn-outline-primary me-2"
                  >Train</a
                >
                <a href="/lego/sets" class="btn btn-outline-dark"
                  >View All Sets</a
                >
              </div>
            </div>
          </section>

          <section class="py-4">
            <div class="container">
              <% if (sets.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Image</th>
                      <th>Name</th>
                      <th>Theme</th>
                      <th>Year</th>
                      <th>Parts</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% sets.forEach(set => { %>

                    <tr>
                      <td>
                        <div
                          class="rounded"
                          style="
                            background-image: url('<%= set.img_url %>');
                            width: 8rem;
                            height: 8rem;
                            background-size: cover;
                            background-position: center;
                          "
                        ></div>
                      </td>
                      <td><%= set.name %></td>
                      <td>
                        <a
                          href="/lego/sets?theme=<%= set.Theme.name %>"
                          class="btn btn-sm btn-outline-dark"
                          ><%= set.Theme.name %></a
                        >
                      </td>
                      <td><%= set.year %></td>
                      <td><%= set.num_parts %></td>
                      <td>
                        <a
                          href="/lego/sets/<%= set.set_num %>"
                          class="btn btn-sm btn-outline-primary"
                          >Details</a
                        >
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <div class="alert alert-warning text-center" role="alert">
                No sets found for the selected theme.
              </div>
              <% } %>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
